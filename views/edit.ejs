      <label for="dob">Author</label>
      <input type="text" id="dob" name="dob" value="<%= emp.dob %>" required>
    </div>
    <div>
      <label for="age">Genre</label>
      <input type="text" id="age" name="age" value="<%= emp.age %>" required>
    </div>
    <div>
      <label for="designation">Genre</label>
      <input type="text" id="designation" name="designation" value="<%= emp.designation %>" required>
    </div>